{
    "$schema": "https://json.schemastore.org/web-manifest-combined.json",
    "name": "Polymind",
    "short_name": "Polymind",
    "description": "Practice memorization at the subconscious level.",
    "categories": [
        "education"
    ],
    "start_url": "./",
    "display": "standalone",
    "orientation": "portrait-primary",
    "background_color": "#1B8E8A",
    "theme_color": "#1B8E8A",
    "icons": [{
        "src": "assets/images/manifest/icon48.png",
        "sizes": "48x48",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon72.png",
        "sizes": "72x72",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon96.png",
        "sizes": "96x96",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon144.png",
        "sizes": "144x144",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon168.png",
        "sizes": "168x168",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon192.png",
        "sizes": "192x192",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon512.png",
        "sizes": "512x512",
        "type": "image/png"
    }, {
        "src": "assets/images/manifest/icon512-transparent.png",
        "sizes": "512x512",
        "type": "image/png",
        "purpose": "maskable"
    }],
    "screenshots" : [
        {
            "src": "assets/images/manifest/screenshot1.png",
            "sizes": "720x1280",
            "type": "image/png",
            "platform": "narrow",
            "label": "Dashboard to manage all of your flashcards"
        },
        {
            "src": "assets/images/manifest/screenshot2.png",
            "sizes": "720x1280",
            "type": "image/png",
            "platform": "narrow",
            "label": "Listen to your flashcard like on a music player"
        }
    ]
}
